<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_device"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/margin_horiz_cardview_device"
        android:layout_marginEnd="@dimen/margin_horiz_cardview_device"
        android:layout_marginBottom="@dimen/margin_vert_cardview_device"
        android:layout_marginTop="@dimen/margin_vert_cardview_device"
        card_view:cardCornerRadius="@dimen/cardview_corner_radius"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/device_type"
                android:layout_width="@dimen/size_image_device"
                android:layout_height="@dimen/size_image_device"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/margin_image_device"
                android:layout_marginBottom="@dimen/margin_image_device"
                app:srcCompat="@drawable/ic_wallpaper_black_24dp" />

            <TextView
                android:id="@+id/device_last_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="20dp"
                android:text="@string/sample_date"
                android:textSize="@dimen/tsize_tv_last_use"/>

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="94dp"
                android:layout_marginBottom="22dp"
                android:text="@string/sample_device_name"
                android:textSize="@dimen/tsize_tv_name_device" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>